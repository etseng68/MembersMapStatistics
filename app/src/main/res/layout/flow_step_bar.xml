<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/flow_step_bar_layout"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/flow_step1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/ic_looks_one_white_24px"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/flow_title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="Search"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/flow_line1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_remove_white_24px"
        android:layout_weight="1"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/flow_step2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/ic_looks_two_white_24px"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/flow_title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="Flyer"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/flow_line2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_remove_white_24px"
        android:layout_weight="1"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/flow_step3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/ic_looks_3_white_24px"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/flow_title3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="Send"/>
    </LinearLayout>
