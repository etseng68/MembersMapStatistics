<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/coupon_cardview"
    android:layout_gravity="center"
    card_view:cardBackgroundColor="#E6E6E6"
    card_view:cardElevation="8dp"
    card_view:cardCornerRadius="8dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginTop="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:orientation="horizontal"
                android:layout_weight="2">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginTop="8dp">
                    <ImageView
                        android:id="@+id/coupon_card_qrcodeImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/ic_launcher"
                        android:layout_marginLeft="8dp"
                        android:scaleType="fitXY" />
                    <!--
                    <TextView
                        android:id="@+id/coupon_qrcodeText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="12345678"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:textSize="36px"/>
                        -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="9dp"
                        android:gravity="center_horizontal">
                        <TextView
                            android:id="@+id/coupon_card_sdate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2015/11/01"
                            android:textSize="12sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/coupon_card_edate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2015/11/07"
                            android:textSize="12sp"/>
                    </LinearLayout>

                </RelativeLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="4dp">

                    <TextView
                        android:id="@+id/coupon_card_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Title"
                        android:gravity="center_horizontal"
                        android:textSize="18sp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="46dp"
                            android:layout_height="46dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_attach_money_blue_24px" />
                        <TextView
                            android:id="@+id/coupon_card_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:text="@string/coupon_price_default"
                            android:gravity="center_horizontal"
                            android:textSize="46sp"
                            android:layout_weight="1" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="46dp"
                            android:layout_height="46dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_discount_label_for_commerce"/>
                        <TextView
                            android:id="@+id/coupon_card_discount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/holo_red_dark"
                            android:text="@string/coupon_discount_default"
                            android:gravity="center_horizontal"
                            android:textSize="46sp"
                            android:layout_weight="1" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/coupon_card_caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:text="caption"
                android:gravity="left"
                android:textSize="14sp"/>
            <!--
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/coupon_barcodeImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/coupon_barcodeText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="123456789"
                    android:gravity="center|bottom" />
            </LinearLayout>
            -->
        </LinearLayout>
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/coupon_card_toolbar"
            android:minWidth="0dp"
            android:layout_marginTop="-10dp"
            android:layout_width="35dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</androidx.cardview.widget.CardView>